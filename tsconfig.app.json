{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*", "node_modules"],
  "compilerOptions": {
    "composite": true,
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020", "dom"],
    "baseUrl": ".",
    "strict": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
